<div id="forum">
  <h1>Forums</h1>

<div id="forum_list_header">
  <div class="last_post">Last Post</div>
  <div class="info">Forum</div>
</div>

<ul id="forums_list">
<% for forum in @forums -%>

<% if forum.topics.length > 0 %>	
  <li id="forum_<%=forum.id%>" class="forum">


  <div class="last_post">
	<%= link_to h(time_ago_in_words forum.topics.first.last_post_at), "/forums/" + forum.id.to_s + "/topics/" + forum.topics.first.id.to_s %>
    <!-- about 18 hours ago<br/> by <a href="/profiles/2655-123456">123456</a><br/>in <a href="/forums/1-i-love-lovd-by-less/topics/306-pretty-cool-but">Pretty cool, BUT</a> -->
  </div>

  <div class="info">
    <h2><%= link_to h(forum.title), forum %></h2>

    <span class="details"><%= forum.topics.count %> topics / 
      <%= forum.posts_count %> posts</span>
    <p><%= h forum.description %></p><br/>


  </div>
</li>
<% end %>

<% end -%>

</ul>
</div>
