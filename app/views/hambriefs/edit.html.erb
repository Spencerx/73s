<h1>Editing hambrief</h1>

<%= error_messages_for :hambrief %>

<% form_for(@hambrief) do |f| %>
  <p>
    <b>Episode</b><br />
    <%= f.text_field :episode %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Embedcode</b><br />
    <%= f.text_area :embedcode %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @hambrief %> |
<%= link_to 'Back', hambriefs_path %>
