<%
#locals
blog ||= feed_item.item
%>


<div class="feed_item photo_feed" id="<%= feed_item.dom_id %>">
  <div class="left">
	<img src="/images/blurp_comment.jpg" class="png icon_small" title="User Photo Icon"  alt="User Photo Icon" /> 
	<% if blog.profile.user %>
	<%= link_to h(blog.profile.f), '/' + blog.profile.user.login %> blogged <%= time_ago_in_words blog.created_at %> ago <%= link_to sanitize(textilize(blog.title)), '/' + blog.profile.user.login + '/blog/' + blog.id.to_s %>
	<% end %>
	</div> 
  	<div class="right">
    	<%= x_feed_link(feed_item) if me %>
  	</div>
	<div class="clear"></div>
</div> 

