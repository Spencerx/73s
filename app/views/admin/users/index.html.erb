
<div class="activity_box">
	<h2><a href="/adverts">Advertisements</a></h2>
  <h2>User List</h2>

  <% @results.each do |p| %>
  <div class="<%= cycle('odd','even') %> search_row left">
    <div><%# icon p, :small rescue ""%><%= image_tag p.gravatar_url, :width => "50"%>
	</div>
	<div><a href="/login?login=<%=p.callsign %>">Proxy</a></div>
    <div><%= link_to h(p.f), p %></div>
    <div><%= mail_to h(p.email), p.email %></div>
    <div><%= link_to_remote "#{ p.is_active ? 'deactivate' : 'activate' }", {:url => formatted_admin_user_path(p, 'js'), :method => :put}, {:id => p.dom_id('link')} %></div>						
  </div>
  <% end %>
  <div class="clear"></div>
  <%= will_paginate @results %>
</div>