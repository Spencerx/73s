<%- 
#locals
#groups ||= @p.grouper 
groupers = Grouper.find(:all, :conditions => ["profile_id = ?", @profile.id])

-%>

<%- unless groupers.empty? -%>
<div class="activity_box">
	<h2>Groups</h2>
	<div class="inside_box">    
		<% groupers.each do |grouper| %>
			<%= link_to grouper.group.title, grouper.group %> 
		<% end %>
		
		<div class="clear"></div>      
	</div>
</div>
<%- end -%>