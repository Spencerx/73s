
<% if newest_member.user != nil %>
<div class="newest_member clear">
  	<div class="left">
	<%# icon newest_member %> 
	<%= link_to image_tag(newest_member.gravatar_url, :width => "50"), '/' + newest_member.user.login%>
	</div>
	
	<div class="left" style="margin-left: 10px;">
	<%= link_to h(newest_member.user.login), '/' + newest_member.user.login %>
