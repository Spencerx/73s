<% for topic in @topics %>


	<% profile = Profile.find(:first, :conditions => ['user_id = ?', topic.user_id])%>

	<%# if !topic.profile.id.blank? and !status.message.blank? %>

	<table width="100%" cellspacing="0" cellpadding="0" border="0" style="background-image: url(/images/dashed_horizontal.gif); background-position: center top; background-repeat: repeat-x; margin-bottom: 5px;">
		<tbody>
			<tr>
				<td style="padding-top: 1px;" colspan="2">
					<div class="box_section_head">
						Posted <%= time_ago_in_words topic.created_at  %>
					</div>
				</td>
			</tr>
			<tr>
				<td valign="top" style="padding-left: 8px; width: 89px;">
					<%# img_opts = {:title => profile.user.login, :alt => profile.user.login, :class => "50"} %>
					<%# link_to avatar_tag(profile, {:size => "50", :file_column_version => "50" }, img_opts) + ' ' + profile.user.login, '/' + profile.user.login %>

					<%# icon profile, :small, :class => 'left avatar_on_comment'   rescue "" %>
					<%= image_tag profile.gravatar_url, :width => "50"%>
					
					<%= link_to profile.user.login.upcase, '/' + profile.user.login  rescue ""%>
				</td>
				<td class="feature_summary" valign="top" style="padding-left: 8px; width: 306px;">

						<strong><a href="/forums/<%= topic.topic.forum.id %>/topics/<%=topic.topic.id%>"> <%= topic.topic.title %></a></strong>
						<!p>
							<div class="comment_message jstruncate">
							  <%= sanitize textilize(topic.body) %>
							</div>
						<!/p>

				</td>
			</tr>
		</tbody>
	</table>

	<%# end %>
<% end %>

