<% content_for :head do  -%>
	
	<style type="text/css">

	/* begin css tabs */

	ul#tabnav { /* general settings */
	text-align: left; /* set to left, right or center */
	margin: 1em 0 1em 0; /* set margins as desired */
	font: bold 11px verdana, arial, sans-serif; /* set font as desired */
	border-bottom: 1px solid #6c6; /* set border COLOR as desired */
	list-style-type: none;
	padding: 3px 10px 3px 10px; /* THIRD number must change with respect to padding-top (X) below */
	}

	ul#tabnav li { /* do not change */
	display: inline;
	}

	body#tab1 li.tab1, body#tab2 li.tab2, body#tab3 li.tab3, body#tab4 li.tab4, body#tab5 li.tab5 { /* settings for selected tab */
	border-bottom: 1px solid #fff; /* set border color to page background color */
	background-color: #fff; /* set background color to match above border color */
	}

	body#tab1 li.tab1 a, body#tab2 li.tab2 a, body#tab3 li.tab3 a, body#tab4 li.tab4 a, body#tab5 li.tab5 a { /* settings for selected tab link */
	background-color: #fff; /* set selected tab background color as desired */
	color: #000; /* set selected tab link color as desired */
	position: relative;
	top: 1px;
	padding-top: 4px; /* must change with respect to padding (X) above and below */
	}

	ul#tabnav li a { /* settings for all tab links */
	padding: 3px 4px; /* set padding (tab size) as desired; FIRST number must change with respect to padding-top (X) above */
	border: 1px solid #6c6; /* set border COLOR as desired; usually matches border color specified in #tabnav */
	background-color: #cfc; /* set unselected tab background color as desired */
	color: #666; /* set unselected tab link color as desired */
	margin-right: 0px; /* set additional spacing between tabs as desired */
	text-decoration: none;
	border-bottom: none;
	}

	ul#tabnav a:hover { /* settings for hover effect */
	background: #fff; /* set desired hover color */
	}

	/* end css tabs */

	</style>
	
<% end -%>

<body id="tab5">

<ul id="tabnav">
	<li class="tab1"><a href="/directory">Users</a></li>
	<li class="tab2"><a href="/repeaters">Repeaters</a></li>
	<li class="tab3"><a href="/clubs">Clubs</a></li>
	<li class="tab4"><a href="/events">Events</a></li>
	<li class="tab5"><a href="/groups">Groups</a></li>
	
</ul>

<div class="title">
	<h2>Group - <%=h @group.title %> 

		<% if @p != nil %>
		- <span id="group-<%= @group.id%>">
		<% @grouper = Grouper.find(:first, :conditions => ["profile_id = ? and group_id = ?", @p.id, @group.id]) %>	
	 	<% if @grouper %>	
			<%= link_to_remote( 'Leave Group', :url => { :controller => "groupers", 
		        :action => "destroy", :id => @group.id },
				:method => 'delete', 
		        :update => "group-#{@group.id}") %>

		<% else %>

			<%= link_to_remote( 'Join Group', :url => { :controller => "groupers", 
		        :action => "create", :id => @group.id },
				:method => 'post', 
		        :update => "group-#{@group.id}") %>

		<% end %>
		</span>
		<% end %>
		
		</h2>

<p>
  <b>Created by:</b>
  <%=h @group.profile.f %>

<br />

  <b>Description:</b>
  <%=h @group.description %>


<% if @p != nil and @group.profile_id == @p.id %>
<%= link_to 'Edit', edit_group_path(@group) %> |
<% end %>

<%= link_to 'Back', groups_path %>
</p>


<div class="right" id="column_r">
	<div id="friends" class="activity_box">
		<h2>Members</h2>
		<div class="inside_box">
		<%- unless @members.empty? -%>    
			<% @members.each do |member| %>
			<% if member != nil %>
			<div class="left my_network">
				<%# icon member.profile rescue "" %><br /><%= member.profile.f rescue "" %>
				<%= image_tag member.profile.gravatar_url, :width => "50"%>
				
			</div>
			<% end %>
			<% end %>
		<%- end -%>

			<div class="clear"></div>    
		</div>
	</div>
</div>

<div class="left" id="column_l">
	<div id="friends>" class="activity_box">
		<h2>Forum Topics</h2>
		<%= render :partial => 'showtopics' %>
	</div>		


</body>
